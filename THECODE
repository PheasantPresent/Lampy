      text-align: center;
      padding: 20px;
    }
    .module {
      margin-bottom: 30px;
      padding: 20px;
      border: 1px solid #ccc;
      border-radius: 10px;
    }
    .module h2 {
      margin-top: 0;
    }
    #module1, #module2, #module3 {
      display: inline-block;
      vertical-align: top;
    }
    .input-box {
      padding: 10px;
      font-size: 14px;
    }
    #module2 textarea {
      resize: none;
    }
    .btn {
      padding: 10px 20px;
      font-size: 16px;
      margin-top: 10px;
      cursor: pointer;
      background-color: #4CAF50;
      color: white;
      border: none;
